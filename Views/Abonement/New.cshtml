@{
    ViewData["Title"] = "New Abonement";
}
@model AbonementClient

<div class="table_new">
    <div>@Model.client.FirstName @Model.client.LastName</div>
    <table class="table_new">
        <thead>
            <th class="table_half"></th>
            <th class="table_half"></th>
        </thead>
@using (Html.BeginForm("New", "Abonement", FormMethod.Post)){
    @Html.HiddenFor(x=>x.ID_Client)
    <tr>
        <td class="new_cell_caption">First day</td>
        <td class="new_cell_edit">@Html.EditorFor(x => x.StartAt)</td>
    </tr>
    <tr>
        <td class="new_cell_caption">Last day</td>
        <td class="new_cell_edit">@Html.EditorFor(x => x.EndAt)</td>
    </tr>
    <tr>
        <td class="new_cell_caption">Group</td>
        <td class="new_cell_edit">@Html.DropDownListFor(x => x.Id_BasicGroup, new SelectList(Model.basicGroups, "Id", "Description"))</td>
    </tr>
    <tr>
        <td class="new_cell_caption">Total trainings</td>
        <td class="new_cell_edit">@Html.EditorFor(x => x.TotalTrainings)</td>
    </tr>
    <tr>
        <td class="table_new" colspan="2"><input class="btnClient" type="submit" value="Create" /></td>
    </tr>
}
</table>
</div>