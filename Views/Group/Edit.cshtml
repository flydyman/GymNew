@{
    ViewData["Title"] = "Edit Group";
}
@model BasicGroup

<div class="table_new">
    <table class="table_new">
        <thead>
            <th class="table_half"></th>
            <th class="table_half"></th>
        </thead>
@using (Html.BeginForm("Edit", "Group", FormMethod.Post)){
    @Html.HiddenFor(x=>x.Id)
    <tr>
        <td class="new_cell_caption">Description</td>
        <td class="new_cell_edit">@Html.EditorFor(x => x.Description)</td>
    </tr>
    <tr>
        <td class="new_cell_caption">Maximum clients</td>
        <td class="new_cell_edit">@Html.EditorFor(x => x.MaxClients)</td>
    </tr>
    <tr>
        <td class="new_cell_caption">Train price</td>
        <td class="new_cell_edit">@Html.EditorFor(x => x.Costs)</td>
    </tr>
    <tr>
        <td class="table_new" colspan="2">
            <input class="btnClient" type="submit" value="Save" />
            <a class="btnClient" asp-action="Index" asp-controller="Group">Cancel</a>
        </td>
    </tr>
}
</table>
</div>